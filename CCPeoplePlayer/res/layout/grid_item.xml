<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200.0dp"
    android:layout_height="260.0dp" >
    <FrameLayout
        android:layout_width="130.0dp"
        android:layout_height="165.0dp"
        android:descendantFocusability="blocksDescendants" >
        <ImageView
            android:id="@+id/item_imgg"
            android:layout_width="120.0dp"
            android:layout_height="155.0dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/grid_item_default" />

        
     <LinearLayout 
                android:layout_width="120dp"
            android:layout_height="25.0dp"
            android:layout_marginBottom="10dip"
               android:background="@drawable/grid_item_name_bg"
               android:orientation="horizontal"
               android:layout_gravity="bottom|center_horizontal">
           
        <TextView 
           	android:id="@+id/item_categoryname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_gravity="bottom|center_horizontal"
            android:singleLine="true"
            android:textSize="15sp"/>
        
        
        
        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:focusableInTouchMode="true"
            android:gravity="center|center_horizontal"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever" 
            android:scrollHorizontally="true"
            android:layout_marginLeft="5dip"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="15sp" /> 
            <!-- 跑马灯效果 marquee_forever 设置跑马灯效果需要ellipsize="marquee"-->
       </LinearLayout>
        <LinearLayout
             android:id="@+id/item_lay"
            android:layout_width="130.0dp"
            android:layout_height="165.0dp"
            android:background="@drawable/people_item_selector" />
        </FrameLayout>

</RelativeLayout>